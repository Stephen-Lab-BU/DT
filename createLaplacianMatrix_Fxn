function ElectrodeMatrix = createLaplacianMatrix(MainElectrode, Electrode_neighbors)
    nameToIndex = containers.Map(MainElectrode, 1:length(MainElectrode));
    ElectrodeMatrix = zeros(length(MainElectrode), length(MainElectrode));

    % Add ElectrodeMatrix with 1s for pertinent neighbors
    for i = 1:length(MainElectrode)
        Electrode = MainElectrode{i};
        if isfield(Electrode_neighbors, Electrode)
            neighbors = Electrode_neighbors.(Electrode);  % Access the neighbors from the struct
            for j = 1:length(neighbors)
                neighbor = neighbors{j};

                % Check if the neighbor is in the list to avoid errors
                if isKey(nameToIndex, neighbor)
                    ElectrodeMatrix(i, nameToIndex(neighbor)) = 1;
                end
            end
        end
    end
end
